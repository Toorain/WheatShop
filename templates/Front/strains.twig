{% extends 'layout.twig' %}

{% block contentAllStrains %}
	<div class="container-fluid d-flex justify-content-between flex-wrap" id="allStrains">	
		{% for strain in strains %}					
			<div class="card col-sm-3 text-white p-0 no-border">
			  <img src="./public/img/{{ strain.img }}" class="card-img w-100 h-100 p-4" alt="{{ strain.name }}">
			  <a href="?p=item&ref={{ strain.ref }}"><div class="d-flex flex-column justify-content-around card-img-overlay m-4">
			    <h5 class="card-title mb-5 bold">{{ strain.name }}</h5>
			    <p class="card-text price bold">{{ strain.price }} â‚¬</p>
			    <p class="card-text bold">Variety : {{ strain.strain_name }}</p>			    
			  </div></a>
			</div>
		{% endfor %}			
	</div>
{% endblock %}