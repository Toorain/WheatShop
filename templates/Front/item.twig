{% extends 'layout.twig' %}

{% block contentItem %}
	{% for strain in strains %}
		{% if ref == strain.ref %}
			<div class="container mt-5">
				<div class="card mb-3" style="max-height: 450px;">
				  <div class="row no-gutters">
				    <div class="col-md-4">
				      <img src="./public/img/{{ strain.img }}" class="card-img" alt="{{ strain.name }}">
				    </div>
				    <div class="col-md-8">
				      <div class="card-body">
				        <h5 class="card-title">{{ strain.name }} | {{ strain.price }} â‚¬</h5>
				        <p class="card-text">{{ strain.description }}</p>				        
			          <div class="row align-items-center justify-content-center">
			          	<form action="basket.php" method="POST" class="col-sm-6 d-flex justify-content-around">
										<input name="itemcount" id="itemscount" type="number" class="form-control text-center col-sm-3" value="1">
										<button name="addCart" class="btn resize-icon col-sm-6 btn-outline-success text-center">ADD TO CART</button>
									</form>
								</div>												        
				      </div>
				    </div>
				  </div>
				</div>
			</div>
		{% endif %}
	{% endfor %}
{% endblock %}